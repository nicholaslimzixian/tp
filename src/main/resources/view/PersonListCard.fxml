<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<HBox id="cardPane" fx:id="cardPane"
      xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">

  <GridPane HBox.hgrow="ALWAYS">
    <columnConstraints>
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10" prefWidth="150" />
    </columnConstraints>

    <VBox alignment="CENTER_LEFT" fillWidth="true" minHeight="105" GridPane.columnIndex="0">
      <padding>
        <Insets top="5" right="5" bottom="5" left="15" />
      </padding>

      <!-- Row 1: index + name + favorite star -->
      <HBox spacing="6" alignment="CENTER_LEFT">
        <Label fx:id="id" styleClass="cell_big_label">
          <minWidth>
            <Region fx:constant="USE_PREF_SIZE" />
          </minWidth>
        </Label>
        <Label fx:id="name" styleClass="cell_big_label"/>
        <Label fx:id="favorite" styleClass="favorite_star" />

      </HBox>

      <!-- Row 2: Address -->
      <HBox spacing="8" alignment="CENTER_LEFT" fillHeight="true">
        <Label text="ðŸ¢" styleClass="icon"
           minWidth="20" prefWidth="20" maxWidth="20"/>
        <Label fx:id="address" wrapText="true" textOverrun="CLIP"
           styleClass="dim-text" HBox.hgrow="ALWAYS"/>
      </HBox>

      <!-- Row 3: Phone -->
      <HBox spacing="8" alignment="CENTER_LEFT" fillHeight="true">
        <Label text="â˜Ž" styleClass="icon"
           minWidth="20" prefWidth="20" maxWidth="20"/>
        <Label fx:id="phone" wrapText="true" textOverrun="CLIP"
           styleClass="dim-text" HBox.hgrow="ALWAYS"/>
      </HBox>

      <!-- Row 4: Email -->
      <HBox spacing="8" alignment="CENTER_LEFT" fillHeight="true">
        <Label text="âœ‰" styleClass="icon"
           minWidth="20" prefWidth="20" maxWidth="20"/>
        <Label fx:id="email" wrapText="true" textOverrun="CLIP"
           styleClass="dim-text" HBox.hgrow="ALWAYS"/>
      </HBox>
    </VBox>
  </GridPane>
</HBox>
